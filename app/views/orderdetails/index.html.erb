<p id="notice"><%= notice %></p>

<h1>Orderdetails</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Book</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orderdetails.each do |orderdetail| %>
      <tr>
        <td><%= orderdetail.order_id %></td>
        <td><%= orderdetail.book_id %></td>
        <td><%= orderdetail.quantity %></td>
        <td><%= link_to 'Show', orderdetail %></td>
        <td><%= link_to 'Edit', edit_orderdetail_path(orderdetail) %></td>
        <td><%= link_to 'Destroy', orderdetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

