<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Subject</th>
      <th>Publisher</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.subject %></td>
        <td><%= book.publisher %></td>
        <td><%= book.price %></td>
        
         
            <td><%= link_to 'Add to Basket', add_to_basket_path(:user_id => current_user, :book_id => book) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


